---
layout: page
---

{% unless sort %}
  {% assign sort = "full" %}
{% endunless %}

{% assign entries = references.entries | sort: sort %}

{{ content }}

<div class="quire-page__content__references">
  {% if config.params.displayBiblioShort == true %}
    {% for entry in entries %}
      <dl>
        <dt><span id="{{ forloop.index }}">{{ entry.id | markdownify }}</span></dt>
        <dd>{{ entry.full | markdownify }}</dd>
      </dl>
    {% endfor %}
  {% else %}
    <ul>
      {% for entry in entries%}
        <li id="{{ forloop.index }}">{{ entry.full | markdownify }}</li>
      {% endfor %}
    </ul>
  {% endif %}
</div>
